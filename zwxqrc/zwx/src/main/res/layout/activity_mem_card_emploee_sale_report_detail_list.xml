                                    android:textColor="@color/color_gray_dark"
                                    android:textSize="@dimen/font_size_14"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/rl_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_10">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/margin_10">

                                <TextView
                                    android:id="@+id/tv_member_card_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:text="会员卡名称："
                                    android:textColor="@color/color_gray_light"
                                    android:textSize="@dimen/font_size_14"
                                    />


                                <TextView
                                    android:id="@+id/tv_member_card_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:text="—"
                                    android:textColor="@color/color_gray_dark"
                                    android:textSize="@dimen/font_size_14"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_product_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:layout_marginRight="@dimen/margin_10"
                                android:text="—"
                                android:textColor="@color/color_gray_dark"
                                android:textSize="@dimen/font_size_14"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_10">
                                <LinearLayout
                                    android:id="@+id/ll_sale_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:id="@+id/tv_sale_total_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:text="销售总数量："
                                        android:textColor="@color/color_gray_light"
                                        android:textSize="@dimen/font_size_14"
                                        />


                                    <TextView
                                        android:id="@+id/tv_sale_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginRight="@dimen/margin_10"
                                        android:text="—"
                                        android:textColor="@color/color_gray_dark"
                                        android:textSize="@dimen/font_size_14"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:id="@+id/tv_sale_amt_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:text="销售总金额："
                                        android:textColor="@color/color_gray_light"
                                        android:textSize="@dimen/font_size_14"
                                        />


                                    <TextView
                                        android:id="@+id/tv_sale_amt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginRight="@dimen/margin_10"
                                        android:text="—"
                                        android:textColor="@color/color_gray_dark"
                                        android:textSize="@dimen/font_size_14"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"/>
                                </LinearLayout>

                            </RelativeLayout>

                            <!--<RelativeLayout
                                android:id="@+id/rl_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_10">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:text="商品名称："
                                        android:textColor="@color/color_gray_light"
                                        android:textSize="@dimen/font_size_14"
                                        />


                                    <TextView
                                        android:id="@+id/tv_product_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginRight="@dimen/margin_10"
                                        android:text="—"
                                        android:textColor="@color/color_gray_dark"
                                        android:textSize="@dimen/font_size_14"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"/>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/tv_product_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:text="—"
                                    android:textColor="@color/color_gray_dark"
                                    android:textSize="@dimen/font_size_14"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>-->
                            <RelativeLayout
                                android:id="@+id/rl_pay_red_amt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/margin_10">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:text="支付金额："
                                        android:textColor="@color/color_gray_light"
                                        android:textSize="@dimen/font_size_14"
                                        />


                                    <TextView
                                        android:id="@+id/tv_pay_amt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginRight="@dimen/margin_10"
                                        android:text="—"
                                        android:textColor="@color/color_gray_dark"
                                        android:textSize="@dimen/font_size_14"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:text="红包抵现金额："
                                        android:textColor="@color/color_gray_light"
                                        android:textSize="@dimen/font_size_14"
                                        />


                                    <TextView
                                        android:id="@+id/tv_red_amt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|left"
                                        android:layout_marginRight="@dimen/margin_10"
                                        android:text="—"
                                        android:textColor="@color/color_gray_dark"
                                        android:textSize="@dimen/font_size_14"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"/>
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@drawable/ic_label_left"
                        android:drawablePadding="@dimen/padding_10"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:text="详情"
                        android:textColor="@color/color_gray_dark"
                        android:textSize="@dimen/font_size_16"
                        android:textStyle="bold"
                        android:typeface="serif" />



                </LinearLayout>

                <com.zwx.scan.app.widget.MyListView
                    android:id="@+id/list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/divide_gray_color"
                    android:dividerHeight="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"/>

                <include
                    layout="@layout/layout_analysis_no_data_tip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    </LinearLayout>

</LinearLayout>