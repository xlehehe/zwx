<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_list_round_corner">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="五年计划"
            android:textColor="@color/color_gray_dark"
            android:textSize="@dimen/font_size_16"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginRight="@dimen/margin_10"
            android:text="15954103102"
            android:textColor="@color/color_gray_dark"
            android:textSize="@dimen/font_size_16"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10">
                <TextView
                    android:id="@+id/tv_position_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="职位："
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/font_size_12"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="服务员"
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/font_size_12"
                    android:layout_toRightOf="@+id/tv_position_label"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10">
                <TextView
                    android:id="@+id/tv_qrc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="当前二维码编号："
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/font_size_12"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_qrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="1号"
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/font_size_12"
                    android:layout_toRightOf="@+id/tv_qrc_label"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_is_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"/>
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>