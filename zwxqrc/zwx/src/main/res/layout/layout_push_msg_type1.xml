<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_push_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:text="2019年2月28日 上午10:16"
        android:textColor="@color/color_gray_light"
        android:textSize="@dimen/font_size_8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:src="@drawable/ic_personal_bg" />

        <TextView
            android:id="@+id/tv_shar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_10"
            android:text="2019，新年玩转老虎机"
            android:textColor="@color/color_gray_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_shar_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_10"
            android:text="大家动起来，优惠转不停，2019，期待有你！"
            android:textColor="#909399"
            android:textSize="11dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@drawable/ic_line_horizontal"/>
        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_detail_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint=""
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingRight="@dimen/margin_10"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>