<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_label_left"
        android:drawablePadding="@dimen/padding_10"
        android:padding="@dimen/margin_10"
        android:text="@string/select_brand_store_name"
        android:textColor="@color/color_gray_dark"
        android:textSize="@dimen/font_size_16"
        android:layout_alignParentTop="true"
        android:background="@color/white"/>

   <!-- <ScrollView
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_tip"
        android:layout_marginBottom="43dp">


    </ScrollView>-->
    <LinearLayout

        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_tip"
        android:layout_marginBottom="43dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ListView
            android:id="@+id/lv_menu"
            android:layout_width="0dp"
            android:layout_height="530dp"
            android:layout_weight="1"
            android:background="#EDECEC" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_select_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="快捷选择："
                        android:textColor="@color/color_gray_deep"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_size_12"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_line_horizontal"
                        android:layout_toRightOf="@+id/tv_select_label"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_10"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/rl_all">

                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="全部店铺"
                        android:textColor="@color/color_gray_dark"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <CheckBox
                        android:id="@+id/cb__all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/rl_self_bus">

                    <TextView
                        android:id="@+id/tv_self_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="全部自营店"
                        android:textColor="@color/color_gray_dark"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <CheckBox
                        android:id="@+id/cb_self_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/rl_all_join">

                    <TextView
                        android:id="@+id/tv_all_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="全部加盟店"
                        android:textColor="@color/color_gray_dark"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <CheckBox
                        android:id="@+id/cb_all_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_select_define_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="自定义选择："
                        android:textColor="@color/color_gray_deep"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_size_12"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_line_horizontal"
                        android:layout_toRightOf="@+id/tv_select_define_label"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_10"/>
                </RelativeLayout>
                <ListView
                    android:id="@+id/lv_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:divider="@null"/>
            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_42"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white" >


        <!-- 取消按钮 -->
        <Button
            android:id="@+id/reset"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_confirm_cancel_util_left_btn_bg"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/font_color_gray_dark"
            android:textSize="@dimen/confirm_cancel_util_dialog_btn_text_size"
            android:paddingTop="@dimen/confirm_cancel_util_dialog_title_padding"
            android:paddingBottom="@dimen/confirm_cancel_util_dialog_title_padding" />
        <!-- 确定按钮 -->
        <Button
            android:id="@+id/confirm"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/btn_color_blue"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/confirm_cancel_util_dialog_btn_text_size"
            android:paddingTop="@dimen/confirm_cancel_util_dialog_title_padding"
            android:paddingBottom="@dimen/confirm_cancel_util_dialog_title_padding" />

    </LinearLayout>

</RelativeLayout>
