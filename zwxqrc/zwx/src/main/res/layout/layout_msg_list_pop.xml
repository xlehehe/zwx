<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:background="@drawable/ic_msg_pop_bg"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/tv_msg_readed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_readed"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/color_gray_deep"
        android:drawableLeft="@drawable/ic_msg_readed"
        android:drawablePadding="@dimen/margin_10"
        android:gravity="center"
        android:padding="@dimen/margin_10"/>


    <include layout="@layout/layout_line_horizontal"/>
    <TextView
        android:id="@+id/tv_msg_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_clear"
        android:textSize="@dimen/font_size_14"

        android:textColor="@color/color_gray_deep"
        android:drawableLeft="@drawable/ic_msg_delete"
        android:drawablePadding="@dimen/margin_10"
        android:padding="@dimen/margin_10"
        android:gravity="center"/>

</LinearLayout>