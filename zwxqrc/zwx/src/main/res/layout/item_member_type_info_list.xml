<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="240dp"
        android:layout_height="140dp"
        android:background="@drawable/ic_member_type_bg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:orientation="horizontal"
            >

            <com.zwx.library.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circle_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_logo_default"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/white"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_gravity=""/>
            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员卡"
                android:textSize="@dimen/font_size_12"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_marginLeft="@dimen/margin_10"
                android:layout_gravity="center"/>



        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_70">

            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直接领取"
                android:textSize="@dimen/font_size_12"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_marginLeft="@dimen/margin_20"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.03.21-2019.03.21"
                android:textSize="@dimen/font_size_12"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

   <!-- <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_member_type_bg"

        android:layout_gravity="center"
        />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_horizontal">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费总次数"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=""
            android:maxLines="2"
            android:singleLine="false"
            android:ellipsize="end"

            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_horizontal">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费金额"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=""
            android:maxLines="2"
            android:singleLine="false"
            android:ellipsize="end"

            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>
    <include layout="@layout/layout_line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员来源店铺"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tv_from_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=""
            android:maxLines="2"
            android:singleLine="false"
            android:ellipsize="end"

            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>
    <include layout="@layout/layout_line_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员来源方式"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tv_from_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=""
            android:maxLines="2"
            android:singleLine="false"
            android:ellipsize="end"

            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_horizontal">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入时间"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tv_join_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=""
            android:maxLines="2"
            android:singleLine="false"
            android:ellipsize="end"

            android:textSize="@dimen/font_size_14"
            android:textColor="@color/color_gray_deep"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_horizontal">

    </View>


</LinearLayout>