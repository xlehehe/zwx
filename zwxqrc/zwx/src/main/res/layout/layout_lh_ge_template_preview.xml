<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/height_20"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10">

            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="240dp"
                android:layout_height="430dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/ll_right"
                android:orientation="vertical">


                <!--游戏主页 - 老虎机活动-->
                <LinearLayout
                    android:id="@+id/ll_yxzy"
                    android:layout_width="240dp"
                    android:layout_height="430dp">

                    <FrameLayout
                        android:layout_width="240dp"
                        android:layout_height="430dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="221dp"
                            android:layout_height="370dp"
                            android:layout_gravity="center|top"
                            android:layout_marginBottom="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="52dp"
                            android:background="@drawable/ic_preview_white_bg"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_lh_pt_yxzy"
                                android:layout_width="219dp"
                                android:layout_height="365dp"
                                android:layout_gravity="center|top"
                                android:layout_marginBottom="42dp"
                                android:src = "@drawable/ic_banner_default"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="240dp"
                            android:layout_height="430dp"
                            android:background="@drawable/ic_lh_yxzy_preview_bg">

                        </FrameLayout>

                    </FrameLayout>
                </LinearLayout>

                <!--游戏主页 - 砸金蛋活动-->
                <LinearLayout
                    android:id="@+id/ll_yxzy2"
                    android:layout_width="240dp"
                    android:layout_height="430dp">

                    <FrameLayout
                        android:layout_width="240dp"
                        android:layout_height="430dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="221dp"
                            android:layout_height="370dp"
                            android:layout_gravity="center|top"
                            android:layout_marginBottom="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="52dp"
                            android:background="@drawable/ic_preview_white_bg"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_lh_pt_yxzy2"
                                android:layout_width="219dp"
                                android:layout_height="365dp"
                                android:layout_gravity="center|top"
                                android:layout_marginBottom="42dp"
                                android:src = "@drawable/ic_banner_default"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/fl_lh_yxzy"
                            android:layout_width="240dp"
                            android:layout_height="430dp"
                            android:background="@drawable/ic_ge_three_bg">

                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>
                <!--  <LinearLayout
                      android:id="@+id/ll_sylunbo"
                      android:layout_width="221dp"
                      android:layout_height="371dp"
                      android:background="@drawable/ic_pt_sylb_bg"
                      android:orientation="vertical"
                      android:layout_marginTop="52dp"
                      android:layout_marginBottom="30dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="13dp">

                      <ImageView
                          android:id="@+id/iv_banner"
                          android:layout_width="match_parent"
                          android:layout_height="70dp"
                          android:background="@drawable/ic_lh_pt_sylunbo_banner"
                          android:layout_gravity="center"
                          android:layout_marginLeft="7dp"
                          android:layout_marginRight="7dp"
                          android:layout_marginTop="70dp"/>


                  </LinearLayout>-->
                <RelativeLayout
                    android:id="@+id/ll_sylb"
                    android:layout_width="222dp"
                    android:layout_height="372dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/ic_campaign_preview_xcxsy_content_bg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_banner"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="68dp"
                        android:background="@drawable/ic_lh_pt_sylunbo_banner" />

                    <LinearLayout
                        android:id="@+id/ll_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginTop="270dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_15">

                            <ImageView
                                android:id="@+id/iv_lhpt_sylb_campaign"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/margin_5"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_logo_default" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_2"
                                android:layout_toRightOf="@+id/iv_lhpt_sylb_campaign"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_campaign_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="四季明湖双而是"
                                    android:textColor="@color/black"
                                    android:textSize="8sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_20"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_time_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="活动时间："
                                        android:textColor="@color/color_gray_deep"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/tv_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:text="2018-12-3~2018-12-31"
                                        android:textColor="@color/color_gray_deep"
                                        android:textSize="8sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <!--分享效果-->
                  <include layout="@layout/layout_lhpt_preview_wechat"/>


            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_dis_top"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="center">

                    <ImageView

                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="top"
                        android:background="@drawable/ic_clear" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/lh_pt_yxzy"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="wrap_content"
                        android:background="@drawable/campaign_preview_btn_top_selector"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:text="@string/campaign_preview_yxzy"
                        android:textColor="@color/font_color_blue"
                        android:textSize="@dimen/font_size_12" />
                    <!--  <Button
                          android:id="@+id/lh_pt_sylunbo"
                          android:layout_width="@dimen/margin_30"
                          android:layout_height="wrap_content"
                          android:textColor="@color/color_gray"
                          android:textSize="@dimen/font_size_12"
                          android:background="@drawable/ic_lh_pt_sylunbo_unselect"
                          android:layout_marginTop="58dp"/>-->

                    <Button
                        android:id="@+id/lh_pt_sylb"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="88dp"
                        android:background="@drawable/campaign_preview_btn_center_selector"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:text="@string/campaign_preview_xcxsy"
                        android:textColor="@color/color_gray_deep"
                        android:textSize="@dimen/font_size_12" />

                    <Button
                        android:id="@+id/lh_pt_fxxg"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="176dp"
                        android:background="@drawable/campaign_preview_btn_bottom_selector"
                        android:paddingBottom="@dimen/margin_2"
                        android:paddingTop="@dimen/margin_2"
                        android:text="@string/campaign_preview_fxxg"
                        android:textColor="@color/color_gray_deep"
                        android:textSize="@dimen/font_size_12" />
                    <!--   <Button
                           android:id="@+id/lh_pt_sylb"
                           android:layout_width="@dimen/margin_30"
                           android:layout_height="wrap_content"
                           android:textColor="@color/color_gray"
                           android:textSize="@dimen/font_size_12"
                           android:background="@drawable/ic_lh_pt_sylb_unselect"
                           android:layout_marginTop="118dp"/>-->

                </FrameLayout>


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_top"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_use"
                android:layout_width="150dp"
                android:layout_height="@dimen/height_35"
                android:layout_gravity="center"
                android:background="@drawable/shape_btn_blue_corner"
                android:gravity="center"
                android:text="关闭预览"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>