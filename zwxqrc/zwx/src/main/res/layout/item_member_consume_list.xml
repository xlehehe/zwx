<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_10"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:background="@drawable/shape_consume_list_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10">
            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="12345678234"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_14"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:text=""
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_14"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_consume_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/margin_10"
                android:text="消费次数："
                android:textColor="#FF566B"
                android:textSize="@dimen/font_size_16"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@drawable/ic_dotted_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="最近消费时间："
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_12"/>



                <TextView
                    android:id="@+id/tv_consume_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="2018.11.18 18:22:36"
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_12"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_memtype_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_card_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="会员卡："
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/tv_memtype_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="@string/record_detail_coupon_name"
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_12"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="¥1222.00"
                    android:textColor="@color/font_color_red"
                    android:textSize="@dimen/font_size_18"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>

                <LinearLayout
                    android:id="@+id/ll_memtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/margin_10">

                    <TextView
                        android:id="@+id/tv_card_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:padding="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingLeft="@dimen/margin_5"
                        android:text="会员卡："
                        android:textColor="@color/color_gray_dark"
                        android:textSize="@dimen/font_size_12"/>

                    <TextView
                        android:id="@+id/tv_memtype_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="-"
                        android:textColor="@color/color_gray_dark"
                        android:textSize="@dimen/font_size_12"/>

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>