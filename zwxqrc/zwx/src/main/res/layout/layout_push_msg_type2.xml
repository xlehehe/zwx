<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_push_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_pt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:text="2019年2月28日 上午10:16"
        android:textColor="@color/color_gray_light"
        android:textSize="@dimen/font_size_8" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名成功通知"
                android:textSize="12sp"
                android:textColor="@color/color_gray_dark"

                android:paddingLeft="@dimen/margin_10"
                android:gravity="center|left"
                android:layout_alignParentLeft="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/ic_push_msg_dot"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_push_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12月23日"
            android:textSize="12sp"
            android:textColor="#909399"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:gravity="center|left"/>
        <TextView
            android:id="@+id/tv_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢迎来到明湖小楼！"
            android:textSize="11dp"
            android:textColor="@color/color_gray_dark"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:gravity="center|left"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_campaign_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动名称："
                android:textSize="12sp"
                android:textColor="@color/color_gray_dark"
                android:paddingLeft="@dimen/margin_10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/tv_campaign_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼团有好礼s"
                android:textSize="11dp"
                android:textColor="@color/color_gray_deep"
                android:singleLine="false"
                android:layout_toRightOf="@id/tv_campaign_name_label"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/padding_17"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_campaign_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动时间："
                android:textSize="12sp"
                android:textColor="@color/color_gray_dark"
                android:paddingLeft="@dimen/margin_10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/tv_campaign_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018.08.09 09:12 -2019.08.09 09:38"
                android:textSize="11dp"
                android:textColor="@color/color_gray_deep"
                android:layout_toRightOf="@id/tv_campaign_time_label"
                android:paddingTop="@dimen/padding_16"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_campaign_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动地点："
                android:textSize="12sp"
                android:textColor="@color/color_gray_dark"

                android:paddingLeft="@dimen/margin_10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/tv_campaign_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明湖小楼-明湖小楼-世贸店明湖小楼-世贸店明湖小楼-世贸店明湖小楼-世贸店明湖小楼-世贸店明湖小楼-世贸店明湖小楼-世贸店明湖小楼-世贸店"
                android:textSize="11dp"
                android:textColor="@color/color_gray_deep"
                android:gravity="left"
                android:singleLine="false"
                android:layout_toRightOf="@id/tv_campaign_address_label"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_16"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5">
            <TextView
                android:id="@+id/tv_member_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员姓名："
                android:textSize="12sp"
                android:textColor="@color/color_gray_dark"

                android:paddingLeft="@dimen/margin_10"
                android:gravity="top"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="11dp"
                android:textColor="@color/color_gray_deep"
                android:layout_toRightOf="@id/tv_member_name_label"
                android:layout_centerVertical="true"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/tv_push_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎前来抢购！"
            android:textSize="12sp"
            android:textColor="@color/color_gray_dark"

            android:paddingLeft="@dimen/margin_10"
            android:gravity="center|left"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin_10"/>
        <include layout="@layout/layout_line_horizontal"/>
        <RelativeLayout
            android:id="@+id/rl_detail2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">
            <TextView
                android:id="@+id/tv_detail_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/tv_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint=""
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingRight="@dimen/margin_10"/>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>