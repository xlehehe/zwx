<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/dialog_confirm_cancel_util_bg"
        android:layout_marginBottom="@dimen/margin_20">

        <RelativeLayout
            android:id="@+id/rv_topbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/margin_10"
            >



            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="提示"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/pickerview_topbar_title_textsize" />



            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_clear_gray"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.如何获得该号码："
            android:textColor="@color/color_gray_deep"
            android:textSize="@dimen/font_size_14"
            android:layout_marginBottom="@dimen/margin_10"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edt_round_bg"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_10">



            <TextView
                android:id="@+id/tv_remark_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:text="@string/pos_id_1"
                android:textColor="#8E939A"
                android:textSize="@dimen/font_size_14"
                android:lineSpacingExtra="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_tip_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.该号码作用："
            android:textColor="@color/color_gray_deep"
            android:textSize="@dimen/font_size_14"
            android:layout_marginBottom="@dimen/margin_10"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edt_round_bg"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_10">



            <TextView
                android:id="@+id/tv_tip_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:text="@string/pos_id_2"
                android:textColor="#8E939A"
                android:textSize="@dimen/font_size_14"
                android:lineSpacingExtra="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_below="@id/rl_top"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20">

            <Button
                android:id="@+id/btn_use"
                android:layout_width="150dp"
                android:layout_height="@dimen/height_35"
                android:background="@drawable/shape_btn_blue_corner"
                android:text="关闭"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>