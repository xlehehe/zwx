<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_order_num_label"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:hint="@string/select_time"
                        android:text="订单编号："
                        android:textSize="@dimen/font_size_12"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text="201904031123"
                        android:textSize="@dimen/font_size_12"
                        android:layout_toRightOf="@id/tv_order_num_label"/>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_good_amt_label"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:hint="@string/select_time"
                        android:text="商品总额："
                        android:textSize="@dimen/font_size_12"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/tv_good_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text="3000"
                        android:textSize="@dimen/font_size_12"
                        android:layout_toRightOf="@id/tv_good_amt_label"/>

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_order_pay_amt_label"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:hint="@string/select_time"
                        android:text="实付金额："
                        android:textSize="@dimen/font_size_12"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/tv_order_pay_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text="300.99"
                        android:textSize="@dimen/font_size_12"
                        android:layout_toRightOf="@id/tv_order_pay_amt_label"/>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_red_packet_label"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|right"
                        android:hint="@string/select_time"
                        android:text="红包："
                        android:textSize="@dimen/font_size_12"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/tv_red_packet"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text="300"
                        android:textSize="@dimen/font_size_12"
                        android:layout_toRightOf="@id/tv_red_packet_label"/>

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_member_info_label"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:hint="@string/select_time"
                        android:text="会员信息："
                        android:textSize="@dimen/font_size_12"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/tv_member_info"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:text="12345678876"
                        android:textSize="@dimen/font_size_12"
                        android:layout_toRightOf="@id/tv_member_info_label"/>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:gravity="center|right"
                    android:hint="@string/select_time"
                    android:text="2018.11.28 09:12:45  "
                    android:textSize="@dimen/font_size_12"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@drawable/ic_line_horizontal"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_5">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/height_80"
                android:layout_height="@dimen/height_80"
                android:src="@drawable/ic_logo_default"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_good_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="康宁餐具8件套家用透明碗玻璃饭碗沙复古怀旧风fsdfsdfsdfsdfdfsdffdfdsfds…"
                    android:textSize="@dimen/font_size_14"
                    android:singleLine="false"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20"/>
                <TextView
                    android:id="@+id/tv_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="x1"
                    android:textSize="@dimen/font_size_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_good_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="G00091"
                        android:textSize="@dimen/font_size_14"
                        android:singleLine="false"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/margin_10"/>

                    <ImageView
                        android:id="@+id/iv_post_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ziti"
                        android:layout_marginTop="@dimen/margin_5"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_duihuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_duihuan_unselect"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_20"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_marginBottom="@dimen/margin_10"
       >

        <TextView
            android:id="@+id/tv_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确认邮寄"
            android:drawableTop="@drawable/ic_goods_manage_post_submit"
            android:drawablePadding="@dimen/margin_10"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/color_gray_dark"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>