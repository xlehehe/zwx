<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divide_gray_color"
    tools:context=".feature.personal.PayAuthInfoActivity">

    <include layout="@layout/layout_common_title"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <include layout="@layout/layout_line_horizontal"
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_top"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/view_line"
        android:layout_marginBottom="@dimen/height_60">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="认证姓名"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="180dp"
                android:gravity="center|right"
                android:hint=""
                android:text="王建国"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>


        <include layout="@layout/layout_line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="认证证件"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_auth_cert"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="180dp"
                android:gravity="center|right"
                android:hint=""
                android:text="身份证"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>


        <include layout="@layout/layout_line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="身份证号"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_id_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="180dp"
                android:gravity="center|right"
                android:hint=""
                android:text="315078198976543214"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>





    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:id="@+id/view_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@drawable/ic_line_horizontal"
            android:layout_alignParentTop="true"/>
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_42"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"
            android:background="@drawable/shape_btn_blue_corner"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
    </RelativeLayout>



</RelativeLayout>