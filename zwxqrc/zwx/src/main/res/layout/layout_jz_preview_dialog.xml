<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/height_20">

            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="240dp"
                android:layout_height="430dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/ll_right"
                android:background="@drawable/ic_campaign_like_hdzy_round"
                android:orientation="vertical">


                <include layout="@layout/layout_campaign_like_hdzy" />

                <LinearLayout
                    android:id="@+id/ll_wechart"
                    android:layout_width="219dp"
                    android:layout_height="330dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="52dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="52dp"
                    android:background="#EBEBEB"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginTop="@dimen/height_40"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_left_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center|top"
                            android:background="@drawable/ic_wx_left_avatar" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/iv_left_avatar"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@id/iv_left_avatar"
                            android:background="@drawable/ic_wechat_left"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_5">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center|left"
                                android:hint="@string/tip_input_forward_title"
                                android:paddingLeft="@dimen/margin_5"
                                android:paddingRight="@dimen/margin_5"
                                android:text="我是文字标题我是文字标题我是文字标题我是"
                                android:textColor="@color/font_color_gray_dark"
                                android:textSize="@dimen/font_size_10" />

                            <ImageView
                                android:id="@+id/iv_img"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_100"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_marginRight="@dimen/margin_5"
                                android:background="@drawable/ic_load_fail" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_marginRight="@dimen/margin_5"
                                android:layout_marginBottom="@dimen/margin_5" />

                            <TextView
                                android:id="@+id/tv_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"

                                android:drawableLeft="@drawable/ic_lh_pt_three_we"
                                android:drawablePadding="@dimen/margin_10"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_5"
                                android:text="小程序"
                                android:textColor="@color/color_gray_deep"
                                android:textSize="@dimen/font_size_8" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_30">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toLeftOf="@id/iv_left_avatar2"
                            android:background="@drawable/ic_wechat_dialogue"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_5">

                            <TextView
                                android:id="@+id/tv_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_marginRight="@dimen/margin_5"
                                android:gravity="center|left"
                                android:hint="@string/tip_input_forward_title"
                                android:text="我是文字标题我是文字标题我是文字标题我是"
                                android:textColor="@color/font_color_gray_dark"
                                android:textSize="@dimen/font_size_10" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_content2"
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center|left|top"
                                    android:hint="@string/tip_input_forward_content"
                                    android:paddingLeft="@dimen/margin_5"
                                    android:paddingRight="@dimen/margin_5"
                                    android:text="fdsfsdffsdffdssfffffsdfsdfsdfsdfsdfsdffsdfsdfdfsdfdffdfds"
                                    android:textColor="@color/color_gray_deep"
                                    android:textSize="@dimen/font_size_8" />

                                <ImageView
                                    android:id="@+id/iv_imgs"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginRight="@dimen/margin_5"
                                    android:background="@drawable/ic_wx_right_content" />
                            </RelativeLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_left_avatar2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_wx_right_avatar" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_sylb"
                    android:layout_width="221dp"
                    android:layout_height="370dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="53dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/ic_campaign_like_hdzy_bg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_banner"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="68dp"
                        android:layout_marginRight="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_lh_pt_sylunbo_banner" />

                    <LinearLayout
                        android:id="@+id/ll_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="268dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_5">

                            <ImageView
                                android:id="@+id/iv_pt_sylb_wx"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/margin_5"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_load_fail" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_2"
                                android:layout_toRightOf="@+id/iv_pt_sylb_wx"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_campaign_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="四季明湖双而是"
                                    android:textColor="@color/black"
                                    android:textSize="8sp" />

                                <!-- <LinearLayout
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:orientation="horizontal"
                                     android:layout_marginTop="@dimen/margin_5">

                                     <TextView
                                         android:id="@+id/tv_yuanjia"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="￥23"
                                         android:textSize="12sp"
                                         android:textColor="@color/color_red"/>

                                     <TextView
                                         android:id="@+id/tv_shoujia"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="￥52"
                                         android:textSize="8sp"
                                         android:textColor="@color/color_gray_deep"
                                         android:layout_marginLeft="@dimen/margin_5"/>

                                 </LinearLayout>-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_20"
                                    android:orientation="horizontal">

                                    <!--     <TextView
                                             android:id="@+id/tv_time_label"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:text="活动时间："
                                             android:textSize="8sp"
                                             android:textColor="@color/color_gray_deep"/>-->

                                    <TextView
                                        android:id="@+id/tv_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:text="2018-12-3~2018-12-31"
                                        android:textColor="@color/color_gray_deep"
                                        android:textSize="8sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_dis_top"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:gravity="center">

                    <ImageView

                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="top"
                        android:background="@drawable/ic_clear" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/lh_pt_yxzy"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="wrap_content"
                        android:background="@drawable/campaign_preview_btn_top_selector"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_10"
                        android:text="@string/campaign_preview_hdzy"
                        android:textColor="@color/font_color_blue"
                        android:textSize="@dimen/font_size_12" />


                    <Button
                        android:id="@+id/lh_pt_fxxg"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/campaign_preview_btn_center_selector"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_5"
                        android:text="@string/campaign_preview_fxxg"
                        android:textColor="@color/color_gray_deep"
                        android:textSize="@dimen/font_size_12" />

                    <Button
                        android:id="@+id/lh_pt_sylb"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="173dp"
                        android:background="@drawable/campaign_preview_btn_bottom_selector"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_15"
                        android:text="@string/campaign_preview_xcxsy"
                        android:textColor="@color/color_gray_deep"
                        android:textSize="@dimen/font_size_12" />
                </FrameLayout>


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_top"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_use"
                android:layout_width="150dp"
                android:layout_height="@dimen/height_35"
                android:layout_gravity="center"
                android:background="@drawable/shape_btn_blue_corner"
                android:gravity="center"
                android:text="关闭预览"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>