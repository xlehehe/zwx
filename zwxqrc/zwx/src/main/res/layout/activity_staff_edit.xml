<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zwx.scan.app.feature.staffmanage.StaffEditActivity">



    <include layout="@layout/layout_common_title"/>



    <include layout="@layout/layout_line_horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/white">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">
            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_xing"
                android:layout_toRightOf="@id/tv_name_label"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/padding_10"/>

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:background="@color/white"
                android:hint="@string/input_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/margin_10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/font_color_gray"
                android:textSize="@dimen/font_size_14"
                android:gravity="center|right"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"/>
          <!--  <LinearLayout
                android:id="@+id/ll_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="@dimen/padding_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next"
                    android:scaleType="fitXY"/>
            </LinearLayout>-->

        </RelativeLayout>
        <include layout="@layout/layout_line_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">
            <TextView
                android:id="@+id/tv_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_xing"
                android:layout_toRightOf="@id/tv_phone_label"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/padding_10"/>


            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:background="@color/white"
                android:hint="@string/input_phone"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:phoneNumber="true"
                android:digits="1234567890"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:maxLength="11"
                android:textColor="@color/font_color_gray"
                android:textSize="@dimen/font_size_14"
                android:layout_toLeftOf="@id/ll_arrow2"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"/>
            <LinearLayout
                android:id="@+id/ll_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="@dimen/padding_10"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </RelativeLayout>
        <include layout="@layout/layout_line_horizontal"/>
        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">
            <TextView
                android:id="@+id/tv_sex_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_xing"
                android:layout_toRightOf="@id/tv_sex_label"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/padding_10"/>

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="请选择性别"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center|right"/>

        </RelativeLayout>
        <include layout="@layout/layout_line_horizontal"/>
        <RelativeLayout
            android:id="@+id/rl_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">
            <TextView
                android:id="@+id/tv_birthday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_xing"
                android:layout_toRightOf="@id/tv_birthday_label"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/padding_10"
                />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/select_entry_time"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_entry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_10">
            <TextView
                android:id="@+id/tv_entry_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entry_time"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_xing"
                android:layout_toRightOf="@id/tv_entry_label"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/padding_10"/>

            <TextView
                android:id="@+id/tv_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/select_entry_time"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"/>

        </RelativeLayout>

        <include layout="@layout/layout_line_horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_position"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_10">
            <TextView
                android:id="@+id/tv_position_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_xing"
                android:layout_toRightOf="@id/tv_position_label"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/padding_10"/>

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/select_position"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"/>

        </RelativeLayout>

        <include layout="@layout/layout_line_horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_qrc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_10">
            <TextView
                android:id="@+id/tv_qrc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qrc"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_qrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="@string/select_qrc"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/color_gray_deep"
                    android:drawablePadding="@dimen/padding_10"
                    android:drawableRight="@drawable/ic_next"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <!--隐藏注销掉-->
                <LinearLayout
                    android:id="@+id/ll_iv_qrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <include layout="@layout/layout_line_vertical"/>

                    <ImageView
                        android:id="@+id/iv_qrc"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_scan"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10"/>
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <include layout="@layout/layout_line_horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_leave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_quit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_quit"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/tv_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择是否离职"
                android:hint=""
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingRight="@dimen/margin_10"/>

        </RelativeLayout>
        <include layout="@layout/layout_line_horizontal"/>
        <RelativeLayout
            android:id="@+id/rl_quitday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_quittime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离职时间"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/tv_quitday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/select_entry_time"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/color_gray_deep"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingRight="@dimen/margin_10"/>

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginRight="@dimen/height_45"
        android:layout_marginLeft="@dimen/height_45"
        android:layout_marginTop="@dimen/margin_70"
        android:background="@drawable/ic_btn_bg"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"/>

</LinearLayout>
