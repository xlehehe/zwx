<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5">

        <!--  <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/margin_1"
              android:background="@drawable/ic_line_horizontal"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_red_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="序号："
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/font_size_14"
                    />


                <TextView
                    android:id="@+id/tv_red_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="1"
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_14"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="李建国"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_14"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="15645345275"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_14"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/ic_line_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/margin_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_red_amt_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="持有红包金额："
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/font_size_14"
                    />


                <TextView
                    android:id="@+id/tv_red_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="30元"
                    android:textColor="@color/font_color_blue"
                    android:textSize="@dimen/font_size_14"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>
            <!--<TextView
                android:id="@+id/tv_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="会员卡"
                android:textColor="#909399"
                android:textSize="@dimen/font_size_14"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>


            <TextView
                android:id="@+id/tv_memtype_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/margin_10"
                android:text=""
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_16"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>-->
        </RelativeLayout>



    </LinearLayout>




</LinearLayout>