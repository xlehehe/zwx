<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_duihuan_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center|left"
                android:hint="@string/select_time"
                android:text="兑换时间："
                android:textSize="@dimen/font_size_12"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_duihuan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center|left"
                android:text="-"
                android:textSize="@dimen/font_size_12"
                android:layout_toRightOf="@id/tv_duihuan_time_label"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_duihuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_duihuan_unselect"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20"/>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@drawable/ic_dotted_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/height_80"
                android:layout_height="@dimen/height_80"
                android:src="@drawable/ic_logo_default"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_good_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="康宁餐具8件套家用透明碗玻璃饭碗沙复古怀旧风fsdfsdfsdfsdfdfsdffdfdsfds…"
                    android:textSize="@dimen/font_size_14"
                    android:singleLine="false"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5">
                <TextView
                    android:id="@+id/tv_sale_price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:hint="@string/select_time"
                    android:text="出售单价："
                    android:textSize="@dimen/font_size_12"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/tv_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:text="300.99"
                    android:textSize="@dimen/font_size_12"
                    android:layout_toRightOf="@id/tv_sale_price_label"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_good_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="—"
                android:textSize="@dimen/font_size_12"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_5"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5">
                <TextView
                    android:id="@+id/tv_duihuan_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:hint="@string/select_time"
                    android:text="兑换门店："
                    android:textSize="@dimen/font_size_12"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/tv_duihuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:text="-"
                    android:textSize="@dimen/font_size_12"
                    android:layout_toRightOf="@id/tv_duihuan_label"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

