<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_10"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:background="@drawable/shape_consume_list_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="支付时间："
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_14"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/tv_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:text="2018.11.18 18:22:36"
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_14"
                    android:layout_centerInParent="true"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_buy_monery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/margin_10"
                android:text="￥200.00"
                android:textColor="@color/font_color_blue"
                android:textSize="@dimen/font_size_16"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@drawable/ic_dotted_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:id="@+id/tv_buy_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:padding="@dimen/margin_5"
                        android:text="购买会员手机号："
                        android:textColor="@color/color_gray_light"
                        android:textSize="@dimen/font_size_12"/>



                    <TextView
                        android:id="@+id/tv_buy_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:padding="@dimen/margin_5"
                        android:text="17253621772"
                        android:textColor="@color/color_gray_dark"
                        android:textSize="@dimen/font_size_12"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tv_channel_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:padding="@dimen/margin_5"
                        android:text="支付渠道："
                        android:textColor="@color/color_gray_light"
                        android:textSize="@dimen/font_size_12"/>



                    <TextView
                        android:id="@+id/tv_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:padding="@dimen/margin_5"
                        android:text="微信"
                        android:textColor="@color/color_gray_dark"
                        android:textSize="@dimen/font_size_12"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_daihao_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_daihao_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="商品代号："
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/tv_daihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="M002"
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_12"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sale_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sale_store_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="出售店铺："
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/tv_sale_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/margin_5"
                    android:text="明湖小楼世贸店"
                    android:textColor="@color/color_gray_dark"
                    android:textSize="@dimen/font_size_12"/>
            </LinearLayout>
