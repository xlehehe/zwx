<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divide_gray_color"
    tools:context=".feature.personal.PayAuthComplateActivity">

    <include layout="@layout/layout_common_title"/>
    <include layout="@layout/layout_line_horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_auth_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="认证类型"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_auth_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="180dp"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:gravity="center|right"
                android:hint=""
                android:text=""
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>


        <include layout="@layout/layout_line_horizontal" />

        <RelativeLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="手机号"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_phone_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="180dp"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:gravity="center|right"
                android:hint=""
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>


        <include layout="@layout/layout_line_horizontal" />

        <RelativeLayout
            android:id="@+id/ll_bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="绑定银行卡"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_bank_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="180dp"
                android:drawablePadding="@dimen/padding_10"
                android:drawableRight="@drawable/ic_next"
                android:gravity="center|right"
                android:hint=""
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>


        <include layout="@layout/layout_line_horizontal" />

    </LinearLayout>


</LinearLayout>